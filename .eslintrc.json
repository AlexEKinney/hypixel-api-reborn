{
    "env": {
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "google",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "linebreak-style": "off",
        "comma-dangle": [
            "error",
            "never"
        ],
        "valid-jsdoc": ["error", {
            "requireParamDescription": false,
            "requireReturnDescription": false,
            "requireReturn": true
        }],
        "max-len": [
            "error",
            {
                "code": 180,
                "ignoreUrls": true
            }
        ],
        "object-curly-spacing": "off",
        "space-before-function-paren": "off",
        "semi": "error",
        "no-console": "error",
        "@typescript-eslint/no-var-requires": "off",
        "no-extra-semi": "error"
    }
}
